<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RandomUserAPI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pastelBlue</item>
        <item name="colorPrimaryVariant">@color/gaudyBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/depressedPink</item>
        <item name="colorSecondaryVariant">@color/gaudyPink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ListStyle">
        <item name="fontFamily">@font/pacifico_regular</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/gaudyPink</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">casual</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>